@model Game
@{
    ViewBag.Title = "Delete Game";
}

<h2>Confirm Deletion</h2>
<h3>@Model.GameName (@Model.GameRelease)</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GameId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="List" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>