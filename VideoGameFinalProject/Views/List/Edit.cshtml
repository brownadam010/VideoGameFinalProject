@model Game
@{
    string game = ViewBag.Action + " Game";
    ViewBag.Game = game;
}

<h2>@game</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="GameName">Game Name</label>
        <input asp-for="GameName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="GameRelease">Release Year</label>
        <input asp-for="GameRelease" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="GameProducer">Game Producer</label>
        <input asp-for="GameProducer" class="form-control">
    </div>

    <input type="hidden" asp-for="GameId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
