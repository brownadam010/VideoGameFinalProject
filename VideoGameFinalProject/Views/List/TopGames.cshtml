@model List<Game>
@{
    ViewData["Title"] = "Top Games";
}
<h1>@ViewData["Title"]</h1>
<a asp-controller="List" asp-action="Add">Add New Game</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Release</th>
            <th>Producer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.GameName</td>
                <td>@game.GameRelease</td>
                <td>@game.GameProducer</td>
                <td>
                    <a asp-controller="List" asp-action="Edit"
                       asp-route-id="@game.GameId"
                       asp-route-slug="@game.Slug">Edit</a>
                    <a asp-controller="List" asp-action="Delete"
                       asp-route-id="@game.GameId"
                       asp-route-slug="@game.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>